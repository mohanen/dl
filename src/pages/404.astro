---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404: Not Found" description="The page you were looking for could not be found.">
  <div class="text-center py-24">
    <h1 class="text-6xl font-bold text-gray-900 dark:text-gray-100">404</h1>
    <p class="text-2xl font-medium mt-4">Page Not Found</p>
    <p class="text-gray-600 dark:text-gray-400 mt-2">Sorry, we couldn't find the page you were looking for.</p>
    <div class="mt-6">
      <a href={`${import.meta.env.BASE_URL}/`} class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-indigo-500 disabled:pointer-events-none disabled:opacity-50 bg-indigo-600 text-white hover:bg-indigo-500 h-10 px-4 py-2">
        Go home
      </a>
    </div>
  </div>
</BaseLayout>
